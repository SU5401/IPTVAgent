#!/bin/bash
echoCmd=`which echo`
dateCmd=`which date`
#get the real path of parent folder
SOURCE="$0"
while [ -h "$SOURCE"  ]; do # resolve $SOURCE until the file is no longer a symlink
    DIR="$( cd -P "$( dirname "$SOURCE"  )" && pwd  )"
    SOURCE="$(readlink "$SOURCE")"
    [[ $SOURCE != /*  ]] && SOURCE="$DIR/$SOURCE" # if $SOURCE was a relative symlink, we need to resolve it relative to the path where the symlink file was located
done
DIR="$( cd -P "$( dirname "$SOURCE"  )" && pwd  )"
shells=${DIR}
function insert()
 { 
insert=`$echoCmd $@`
Host=localhost
User=root
MYSQL=`which mysql`
$echoCmd -n "[`$dateCmd -d today +"%Y-%m-%d %H:%M:%S"`]">>$shells/collect.log
MSG=`${MYSQL} -h${Host} -u${User} iptvm -e"nowarning;$insert" 2>>$shells/collect.log<<EOF
exit
EOF`
$echoCmd "Exit $0">>$shells/collect.log 
}

